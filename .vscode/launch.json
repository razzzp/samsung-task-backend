{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "npm",
            "runtimeArgs": ["start"],
            "console": "integratedTerminal",
            "sourceMaps": true
        },

        {
            "type": "node",
            "request": "launch",
            "name": "Test",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outputCapture": "console",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["test"],
            "console": "integratedTerminal",
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run File",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["ts-node"],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}",
            "console": "integratedTerminal",
            "sourceMaps": true
        }
    ]
}